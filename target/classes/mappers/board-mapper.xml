	<insert id="insertEBoard" >
 	insert into board 
 	values (seq_bid.nextval, #{boardTitle}, #{boardContent}, SYSDATE, NULL, DEFAULT, DEFAULT, #{boardType}, #{adminId})
 	</insert>


