 	join BOARD ON (IDENTIFY_NO = BOARD_NO )
 	where IDENTIFY_NO = #{eNO} and BOARD_STATUS = 'Y' and IMAGE.BOARD_TYPE = 2
 	</select>
 	<resultMap type="Image" id="eBoardImages">
